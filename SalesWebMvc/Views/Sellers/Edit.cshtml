@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Tittle"] = "Edit";
}
<h2>@ViewData["Tittle"]</h2>

<h4>Seller</h4>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-control">
                <label asp-for="Seller.Name"></label>
                <input asp-for="Seller.Name"/><br />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-control">
                <label asp-for="Seller.Email"></label>
                <input asp-for="Seller.Email"/><br />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-control"> 
                <label asp-for="Seller.BirthDate"></label>
                <input asp-for="Seller.BirthDate"/><br />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-control">
                <label asp-for="Seller.BaseSalary"></label>
                <input asp-for="Seller.BaseSalary"/><br />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-control">
                <label asp-for="Seller.DepartmentId"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control form-select border-2" ></select>
            </div>
            <div>
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}